{# empty Twig template #}

{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('assets/vendor/jqcloud2/dist/jqcloud.min.css') }}">
{% endblock stylesheets %}


{% block javascripts %}
    {{ parent() }}
    <script>
        var words = [
            {% for word, freq in freq_list|slice(0,40) %}
                    {text: '{{word}}:{{freq}}', weight: {{freq}}, link: '{{ path('display_keyword', 
                            {'id_activity': id_activity, 'keyword': word}) }}' },
            {% endfor %}                
        ];
        
        $('#keywords').jQCloud(words,  {
                    width: 800,
                    height: 350,
        });        
    </script>
{% endblock %}
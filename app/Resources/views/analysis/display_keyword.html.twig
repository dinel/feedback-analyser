

{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}    
{% endblock stylesheets %}

{% block body %}

<div class="container">
    <div class='row voffset4'>
        <div class="col-md-2">
            <h4>Activity</h4>
         </div>
        <div class="col-md-8">
        {{ activity.name }}
        </div>
    </div>
        
    <div class='row voffset4'>
        <div class="col-md-2">
            <h4>Usages</h4>
         </div>
        <div class="col-md-9">
            <div class="list-group">
                {% for concordance in concordances %}
                <a href="{{ path('display_feedback', {'id_feedback' : concordance[1]}) }}" class="list-group-item">
                     {{ concordance[0]|raw }} 
                     <span class="badge">
                         <span class="glyphicon glyphicon-search"></span>
                     </span>
                </a>
                {% endfor %}
            </div>
        </div>
    </div>
                
    <div class='row voffset4'>
        <div class="col-md-2">
            <h4><a href="javascript:history.go(-1)">[Go Back]</a></h4>
         </div>
    </div>
</div>
    
{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}